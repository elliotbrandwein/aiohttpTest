<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
<script type = "text/javascript" >
    function update(){

    }
$( document ).ready(function()
{
    $("#text").keyup(function (e)
    {
        if (e.keyCode == 13) {
            var input = $("#text").val();
            console.log(input);
            $.ajax({
                url: "/",
                type: "POST",
                dataType: "json",
                data: JSON.stringify({name: input}),
                success: function (response) {
                    console.log(response);
                    $("#test").prepend('<p> hi there' + response.name + '</p>');
                },
                error: function (response) {
                    console.log('error');
                }
            });
        }
    });
    $("#button").click( function (e) {
        var input = $("#text").val();
        console.log(input);
        $( "#test" ).prepend("<p>"+input+"</p>");
    });
});


</script>
<body>
<h1>Welcome to {{ name }}</h1>
<input id = "text" type="text" onsubmit="Send()" />
<input id="button" type="button" value="Send" />
<div id="test"></div>
</body>
</html>